# Kalshi API (use API key + private key; no email/password)
# Get from: Kalshi Account & Security -> API Keys
KALSHI_API_KEY_ID=your-api-key-id
KALSHI_PRIVATE_KEY_PATH=path/to/private_key.pem
# Or paste raw PEM content (avoid path on disk):
# KALSHI_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----"

# Reddit API (create app at https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_client_id
REDDIT_CLIENT_SECRET=your_client_secret
REDDIT_USER_AGENT=SentimentAnalyzer/1.0 by your_username

# OpenAI
OPENAI_API_KEY=sk-...

# Optional: analysis / simulation behavior
DRY_RUN=true
MIN_DELTA=0.10
CONFIDENCE_THRESHOLD=0.75
POLL_INTERVAL_SEC=120
MAX_CONTRACTS_PER_TRADE=100
